FROM micropython/unix:latest AS build

FROM scratch

COPY --from=build  /usr/local/bin/micropython  /usr/bin/micropython

COPY --from=build /lib64/ld-linux-x86-64.so.2 /lib64/ld-linux-x86-64.so.2
COPY --from=build /lib/x86_64-linux-gnu/libm.so.6 /lib/x86_64-linux-gnu/libm.so.6
COPY --from=build /lib/x86_64-linux-gnu/libffi.so.8 /lib/x86_64-linux-gnu/libffi.so.8
COPY --from=build /lib/x86_64-linux-gnu/libc.so.6 /lib/x86_64-linux-gnu/libc.so.6
COPY --from=build  /etc/ld.so.cache /etc/ld.so.cache
COPY ./helloworld.py /helloworld.py
